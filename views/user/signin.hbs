<div class="flex-container" style="flex-direction: column">
    <div style="order: 1; align-self: center">
        <h1>Sign in</h1>
    </div>
    {{#if hasErrors}}
        <div class="alert alert-danger text-center">
            {{#each messages}}
                <p>{{this}}</p>
            {{/each}}
        </div>
    {{/if}}
    <div style="order: 2" class="flex-container">
        <form action="/user/signin" method="post" style="flex-basis: 40rem">
            <div class="form-group">
                <label for="email">E-mail</label>
                <input type="text" id="email" name="email" class="form-control">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" name="password" id="password" class="form-control">
                <input type="hidden" name="_csrf" value="{{ csrfToken }}">
            </div>
            <button type="submit" class="btn btn-primary">Sign in</button>
            <hr>
            <p>Don't have an account? <a href="/user/signup">Sign up</a> instead!</p>
        </form>
    </div>
</div>

<!-- Just for show {{ csrfToken }}-->