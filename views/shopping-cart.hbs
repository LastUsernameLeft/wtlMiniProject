{{#if products}}
    <div class="shopcart-flex">
        <div class="card">
            <div class="card-block">
                <ul class="list-group">
                    {{# each products }}
                        <li class="list-group-item">
                            <span class="badge">{{ this.qty }}</span>
                            <strong>{{ this.item.title }}</strong>
                            <span class="label label-success">{{ this.price }} â‚¹</span>
                            <div class="btn-group">
                                <button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown">
                                    Action<span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a href="/reduce/{{this.item._id}}">Reduce by 1</a></li>
                                    <!--<li><a href="#">Increase by 1</a></li>-->
                                    <li><a href="/remove/{{this.item._id}}">Remove all</a></li>
                                </ul>
                            </div>
                        </li>
                    {{/each}}
                </ul>
            </div>
        </div>

        <div class="card">
            <div class="card-block">
                <strong>Total: {{ totalPrice }}</strong>
            </div>
        </div>
    </div>
    <hr>
    <div class="text-center">
        <a href="/checkout" type="button" class="btn btn-success btn-lg">Checkout</a>
    </div>
{{else}}
<div class="shopcart-flex">
    <div class="card text-center">
        <h2>No Items in Cart</h2>
    </div>
</div>
{{/if}}
